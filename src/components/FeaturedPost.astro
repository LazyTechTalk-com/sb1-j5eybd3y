---
interface Props {
  title: string;
  excerpt: string;
  image: string;
  href: string;
  category: string;
}

const { title, excerpt, image, href, category } = Astro.props;
---

<article class="bg-primary-light rounded-lg overflow-hidden hover:transform hover:scale-105 transition-transform duration-300">
  <a href={href} class="block">
    <img src={image} alt={title} class="w-full h-48 object-cover" />
    <div class="p-6">
      <span class="text-accent text-sm font-semibold">{category}</span>
      <h3 class="text-xl font-bold mt-2 mb-3">{title}</h3>
      <p class="text-gray-400">{excerpt}</p>
    </div>
  </a>
</article>