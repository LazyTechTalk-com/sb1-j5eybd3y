---
const navigation = [
  { name: 'Reviews', href: '/reviews' },
  { name: 'Tutorials', href: '/tutorials' },
  { name: 'New Launches', href: '/launches' },
  { name: 'Blog', href: '/blog' },
];
---

<header class="bg-primary-light border-b border-gray-800">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div class="w-full py-6 flex items-center justify-between">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-accent">
          Lazy Tech Talk
        </a>
        <div class="hidden ml-10 space-x-8 lg:block">
          {navigation.map((link) => (
            <a href={link.href} class="text-base font-medium text-white hover:text-accent">
              {link.name}
            </a>
          ))}
        </div>
      </div>
      <div class="ml-10 space-x-4">
        <button class="bg-primary px-4 py-2 rounded-md text-sm font-medium text-white hover:bg-primary-light focus:outline-none focus:ring-2 focus:ring-accent">
          Search
        </button>
      </div>
    </div>
    <div class="py-4 flex flex-wrap justify-center space-x-6 lg:hidden">
      {navigation.map((link) => (
        <a href={link.href} class="text-base font-medium text-white hover:text-accent">
          {link.name}
        </a>
      ))}
    </div>
  </nav>
</header>